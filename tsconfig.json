{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
//    "types": ["vite/client", "cypress", "cypress-real-events", "node"],
    "types": ["node"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
//      "#/*": ["cypress/support/utils/*"]
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
//    "jsxImportSource": "@emotion/react",
    "noImplicitAny": false,
    "useDefineForClassFields": true,
    "allowJs": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*",
//    "cypress/tests/**/*.cy.tsx",
//    "cypress.d.ts",
//    "cypress/e2e/**.cy.ts",
//    "cypress/plugins/**.tsx",
//    "cypress/support/**.ts",
//    "cypress/component/**.ts",
    "src/**/*.json",
  ],
  "exclude": ["node_modules", "src/tests", "dist", ".husky", ".vscode"],
  "references": [
//    { "path": "./tsconfig.node.json" },
//    { "path": "./tsconfig.vitest.json" }
  ]
}
